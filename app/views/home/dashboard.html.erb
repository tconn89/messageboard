<!-- RIGHT-CONTAINER -->
<div class="right-container container">
  <div class="post-message block"> 
    <h2 class="titular">POST A MESSAGE</h2>
    <%= form_for :post, :url => '/posts' do |f| %>
      <%= f.text_field :title, :id => 'title_input', :placeholder => 'Title', :required => true, :maxlength => '22'%><br />
      <%= f.text_area :message, :class => 'message_input', :placeholder => 'Whats on your mind?', :required => true %><br />
      <%= f.submit 'POST', :class => 'subscribe button' %>
    <% end %>
